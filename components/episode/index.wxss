/* components/epsoide/index.wxss */
.container{
    height: 60rpx;
    display: inline-flex;
    flex-direction: row;
}
.plain{
    font-size: 32rpx;
}
.index{
    font-size: 60rpx;
    line-height: 100%;
    font-weight: 800;
}
.line{
    height: 44rpx;
    border-left: 2rpx solid #000;
    margin: 0 14rpx;
}
.index-container{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}
.date-container{
    margin-top: 5rpx;
    height: 60rpx;
    display: flex;
    flex-direction: column;
}
.month{
    margin-right: 2rpx;
    font-size: 24rpx;
    line-height: 24rpx;

}
.year{
    font-size: 20rpx;
}